@using AutoUp.ViewModels
@model PaymentsViewModel
<h2>Пополнить счет</h2>
<br />
<div style="color:red; }">@ViewBag.Message</div>
<form asp-action="Create" asp-controller="Payments" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Amount"></label><br />
            <input asp-for="Amount" />&nbsp;EUR
            <span asp-validation-for="Amount" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}