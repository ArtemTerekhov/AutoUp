@using AutoUp.ViewModels
@model EditUserViewModel
<h2>Редактировать пользователя</h2>
<br />
<form asp-action="EditUser" asp-controller="Admin" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <input type="hidden" asp-for="UserId" />
    <div>
        <div class="form-group">
            <label asp-for="Login"></label><br />
            <input type="text" asp-for="Login"  value="@Model.Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password"  value="@Model.Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label><br />
            <input asp-for="ConfirmPassword"  value="@Model.Password" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label><br />
            <input asp-for="Email"  value="@Model.Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Balance"></label><br />
            <input asp-for="Balance"  value="@Model.Balance"/>
            <span asp-validation-for="Balance" />
        </div>
        <div class="form-group">
            <label asp-for="Telegram"></label><br />
            <input asp-for="Telegram"  value="@Model.Telegram" />
            <span asp-validation-for="Telegram" />
        </div>
        <div class="form-group">
            <label asp-for="Jabber"></label><br />
            <input asp-for="Jabber"  value="@Model.Jabber" />
            <span asp-validation-for="Jabber" />
        </div>
        <div class="form-group">
            <select name="role" asp-items="Model.FilterRoleViewModel.Roles"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


