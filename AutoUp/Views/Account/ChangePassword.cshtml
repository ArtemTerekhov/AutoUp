@using AutoUp.ViewModels
@model ChangePassViewModel
<h2>Сменить пароль</h2>
<br />
<form asp-action="ChangePassword" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="ActualPassword" />
    <div>
        <div class="form-group">
            <label asp-for="OldPassword"></label><br />
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
